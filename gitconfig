[user]
	name = gabriel pettier
	email = dev@tangibledisplay.com
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[alias]
	st = status --short
	ci = commit
	co = checkout
	br = branch
	sl = log --stat
	gl = log --graph --pretty=format:\"%C(yellow)%h%C(red)%d%Creset %s\"
	gla = log --graph --pretty=format:\"%C(yellow)%h%C(red)%d%Creset %s\" --all
	ll = log --graph --pretty=format:\"%C(yellow)%h %C(blue)%cd%C(green) %an %C(red)%d %Creset%s\"
	lla = log --graph --pretty=format:\"%C(yellow)%h %C(blue)%ci%C(green) %an %C(red)%d %Creset%s\" --all
	in = !git ll ..origin

	d = diff --patience -B -C
	sd = diff --patience -B -C --staged
	wd = diff --color-words --patience -B -C
	ws = show --color-words
	hgp = show --format=\"From: %an <%ae>%n%s%n%b\" -U8
	branch-diff = !git diff $(git merge-base HEAD master) $1
	pull = pull --rebase
	df = diff
	nopushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
	nomerged = branch -a --no-merged
	latest = for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short) [%(committername)]'
	newalias = config --global
	ds = diff --staged
	rc = rebase --continue
	cstatus = -c color.status=always status --short
	bc = branch --color -v
	pp = !git pull --rebase  && git push
	monitor = !watch -tc 'git -c color.status=always st&&echo&&git log @{u}..HEAD --graph --decorate --boundary --oneline --color && echo && git br && echo && git reflog --color|head -n 15 && echo && git ll --date short&& git fetch'
	slog = log --pretty=format:"%C(auto,yellow)%h%C(auto)%d\\ %C(auto,reset)%s\\ \\ [%C(auto,blue)%cn%C(auto,reset),\\ %C(auto,cyan)%ar%C(auto,reset)]"
	addprx = "!f() { b=`git symbolic-ref -q --short HEAD` && \
		git fetch origin pull/$1/head:pr/$1 && \
		git fetch -f origin pull/$1/merge:PR_MERGE_HEAD && \
		git rebase --onto $b PR_MERGE_HEAD^ pr/$1 && \
		git branch -D PR_MERGE_HEAD && \
		git checkout $b && echo && \
		git diff --stat $b..pr/$1 && echo && \
		git slog $b..pr/$1; }; f"
	pr = "!git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1"

[core]
	editor = vim
	excludesfile = ~/.gitignore_global

[tool]
	diff = vimdiff
[push]
	default = tracking
[github]
	user = tshirtman
	username = tshirtman
[init]
	templatedir = ~/.git/template/
[diff]
	algorithm = patience
	indentHeuristic = true
[rebase]
	autostash = true
[commit]
	verbose = true
